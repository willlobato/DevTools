<idea-plugin>
  <id>org.jetbrains</id>
  <name>DevTools</name>
  <version>1.0</version>
  <vendor email="will.lobato@gmail.com" url="https://github.com/willlobato/DevTools">Will Lobato</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="171"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <toolWindow id="Liberty Profile" secondary="true" icon="/plus.png" anchor="bottom" factoryClass="devtools.toolwindow.LibertyProfileToolWindow"/>
  </extensions>

  <actions>
    <!-- MENU -->
    <group id="devtools.menu.DevToolsMenu" text="DevTools">
      <action id="devtools.menu.ConfigurationAction" class="devtools.menu.ConfigurationAction" text="Configuration"/>
      <action id="devtools.menu.RestartApplicationAction" class="devtools.menu.RestartApplicationAction" text="Restart Application"/>
      <add-to-group group-id="MainMenu" anchor="last"/>
    </group>

    <!-- TOOLBAR -->
    <group id="devTools.toolbar">
      <action id="devtools.toolbar.ComboBoxApplication" class="devtools.toolbar.ComboBoxApplication" text="Select Application"/>
      <action id="devtools.toolbar.RestartApplicationAction" class="devtools.toolbar.RestartApplicationAction"/>
      <!--<action id="devtools.menu.TesteAction" class="devtools.menu.TesteAction" icon="/computer-16.png"/>-->
      <add-to-group group-id="MainToolBar" anchor="last"/>
    </group>

    <!--
    <group id="devTools.projectView" popup="true" text="DevTools" icon="/computer-16.png">
      <action id="addProjectToProfile" class="devtools.action.projectview.AddProjectToProfile" text="Add Project To Profile Liberty"/>
      <add-to-group group-id="ProjectViewPopupMenu" anchor="before" relative-to-action="AddToFavorites"/>
    </group>
    -->
  </actions>

  <application-components>
    <component>
      <implementation-class>devtools.registration.DevToolsRegistration</implementation-class>
    </component>
  </application-components>
  <project-components>
    <component>
      <implementation-class>devtools.toolbar.SelectApplicationComponent</implementation-class>
    </component>
  </project-components>
</idea-plugin>